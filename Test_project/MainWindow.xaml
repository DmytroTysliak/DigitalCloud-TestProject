<Window x:Class="Test_project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test_project"
        xmlns:Search_button="clr-namespace:Test_project.View.Search_button"
        xmlns:Changes_buttons="clr-namespace:Test_project.View.Changes_buttons"
        mc:Ignorable="d"
        Title="MainPage" Height="450" Width="800">
    <StackPanel>
        <DataGrid x:Name="TopCurrenciesGrid"
        ItemsSource="{Binding Currencies}"
        SelectedItem="{Binding SelectedCurrency, Mode=TwoWay}"
        Width="800"
        AutoGenerateColumns="False"
        HorizontalAlignment="Center"
        Margin="0,0,0,20"
        MouseDoubleClick="CurrenciesGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Currency Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Code" Binding="{Binding Code}" />
                <DataGridTextColumn Header="Price (USD)" Binding="{Binding Price}" />
            </DataGrid.Columns>
        </DataGrid>



        <Search_button:Search Grid.Row ="1" Width="400" Height="60"/>



        <Changes_buttons:Changes DataContext="{Binding}" Width ="400" Height="60"/>

    </StackPanel>

</Window>
