<UserControl x:Class="Test_project.View.Changes_buttons.Changes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Test_project.View.Changes_buttons"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="350">
    <StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="Add" Command="{Binding AddCurrencyCommand}" Content="Add" Width="120" Margin="5"/>
            <Button x:Name="Delete" Command="{Binding DeleteCurrencyCommand}"  Content="Delete" Width="120" Margin="5"/>
            <Button x:Name="Refresh" Command="{Binding RefreshCurrencyCommand}" Content="Refresh" Width="120" Margin="5"/>
        </StackPanel>
    </StackPanel>
</UserControl>
